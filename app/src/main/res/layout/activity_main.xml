<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.car.app.voice.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:gravity="center"
            android:minHeight="45dp"
            android:minWidth="200dp"
            android:onClick="onSetting"
            android:text="跳转到设置" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:gravity="center"
            android:minHeight="45dp"
            android:minWidth="200dp"
            android:onClick="OnVoice"
            android:text="跳转到语音" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:gravity="center"
            android:minHeight="45dp"
            android:minWidth="200dp"
            android:onClick="onHome"
            android:text="跳转到主页" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:gravity="center"
            android:minHeight="45dp"
            android:minWidth="200dp"
            android:onClick="OnApps"
            android:text="跳转到apps也没" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:gravity="center"
            android:minHeight="45dp"
            android:minWidth="200dp"
            android:onClick="onPhoneBook"
            android:text="跳转到电话簿" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:gravity="center"
            android:minHeight="45dp"
            android:minWidth="200dp"
            android:onClick="onCalendar"
            android:text="跳转到日历" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:gravity="center"
            android:minHeight="45dp"
            android:minWidth="200dp"
            android:onClick="onWeather"
            android:text="跳转到天气" />


    </LinearLayout>


</ScrollView>
